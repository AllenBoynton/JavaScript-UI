// Set backgroung 
var mainWindow = Ti.UI.createWindow ({
	backgroundImage: 'images/grass.jpg',
	title: 'Top 20 Strongest Dog Breeds',
	opacity: '20%'
});

var navWindow = Ti.UI.iOS.createNavigationWindow ({
	window: mainWindow
});

// Create tab group
var tabGroup = Ti.UI.createTabGroup();

// Create a Home tab
var homeWindow = Ti.UI.createWindow ({
	title: 'Home',
	backgroundColor: 'gray'
});

var homeTab = Ti.UI.createTab({
	icon: 'images/home.jpg',
	title: 'Home',
	window: homeWindow
});

var searchWindow = Ti.UI.createWindow ({
	title: 'Search',
	backgroundColor: 'gray'
});

// Create a Search tab
var searchTab = Ti.UI.createTab ({
	icon: 'images/search.png',
	title: 'Search',
	window: searchWindow
});

// Open tab group
tabGroup.open();
 
// Create a Button.
var window1 = Ti.UI.createButton({
	title: 'The Mastiff',
	color: 'D2FF4F',
	font: {fontSize: 18, fontWeight: 'bold', fontStyle: 'roboto', fontWeight: 'bold'},
	textAlign: 'center',
	backgroundColor: 'gray',
	height: 50,
	width: 250,
	top: 20,
	borderRadius: 4,
	borderColor: 'black',
	borderWidth: 2
});

// Listen for click events.
window1.addEventListener('click', function() {
	alert('\'The Mastiff\' was clicked!');
});


// var loadFile = require("json.js");

mainWindow.add(homeWindow, homeTab, window1);
navWindow.open();
